<Page
    x:Class="Bti.Babble.Metro.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Bti.Babble.Metro"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    
    <!--
    <Page.DataContext>
        <local:MainPageViewModel />
    </Page.DataContext>
    -->
    <Grid Background="{StaticResource ApplicationPageBackgroundBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="140" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Title -->
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Column="0" x:Name="TitleText" Text="My WKRN" VerticalAlignment="Center" FontSize="48" Margin="56,41,0,41"/>
            <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="0,41,56,41">
                    <TextBlock Text="Stories" VerticalAlignment="Center" FontSize="32"/>
                    <Image Source="/Assets/video.png" Height="48" Width="48" Margin="0,0,0,0" />
                    <TextBlock Text="Points" VerticalAlignment="Center" FontSize="32" Margin="20,0,0,0"/>
                    <Image Source="/Assets/heart.png" Height="48" Width="48" Margin="0,0,0,0"/>
                    <TextBlock Text="Favs" VerticalAlignment="Center" FontSize="32" Margin="20,0,0,0"/>
                    <Image Source="/Assets/favs.png" Height="48" Width="48" Margin="0,0,0,0"/>
                    <TextBlock Text="Coupons" VerticalAlignment="Center" FontSize="32" Margin="10,0,0,0"/>
                    <Image Source="/Assets/share.png" Height="48" Width="48" Margin="0,0,0,0"/>
            </StackPanel>
        </Grid>
        
        <!-- Content -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*" MinWidth="320" />
                <ColumnDefinition Width="3*" />
            </Grid.ColumnDefinitions>

            <!-- Left column -->
            <!-- The default value of Grid.Column is 0, so we do not need to set it   
                 to make the ListView show up in the first column. -->
            <ListView x:Name="ItemListView" ItemsSource="{Binding BabbleEvents}" Margin="60,0,0,10" SelectionChanged="ItemListView_SelectionChanged">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="5,0,0,0">
                                <Image Source="{Binding ImageSource}" Width="48" Height="48"  />
                                <TextBlock Text="{Binding User}" Margin="5,0,0,0" FontSize="24" />
                            </StackPanel>
                            <TextBlock Text="{Binding Message}" FontSize="18" Margin="15,0,0,0" TextWrapping="Wrap"/>
                            <TextBlock FontSize="8" />
                            <TextBlock Text="{Binding PubDate}" FontSize="8" Margin="15,2,0,0"/>
                        </StackPanel>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

            <!-- We use a Grid here instead of a StackPanel so that the WebView sizes correctly. -->
            <Frame x:Name="BodyFrame" Grid.Column="2" />
        </Grid>
    </Grid>

</Page>
