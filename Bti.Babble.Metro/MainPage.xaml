            <Frame x:Name="BodyFrame" Grid.Column="2">
                <Frame.ContentTransitions>
                    <TransitionCollection>
                        <EntranceThemeTransition/>
                    </TransitionCollection>
                </Frame.ContentTransitions>
            </Frame>
            
